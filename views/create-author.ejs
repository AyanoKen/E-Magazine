<%- include("partials/home-header"); %>

<h1>Create New Author</h1>

<form class="" action="/createAuthor" method="post">
  <div class="form-group">
    <label><strong>Author Name</strong></label>
    <input type="text" name="authorName" class="form-control">
  </div>
  <div class="form-group">
    <label><strong>Author Bio</strong></label>
    <textarea name="authorBio" rows="8" cols="80" class="form-control"></textarea>
  </div>
  <div class="form-group">
    <label><strong>Author Image</strong></label>
    <input type="text" name="authorImage" class="form-control">
  </div>
  <div class="form-group">
    <label><strong>Batch(Univerity Outgoing year)</strong></label>
    <input type="number" name="authorBatch" placeholder="year (yyyy)">
  </div>
  <button type="submit" class="btn btn-lg btn-primary">Publish</button>
</form>

<%- include("partials/footer"); %>
